{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true, // allows a partial TypeScript and JavaScript codebase
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitThis": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "lib": ["ES2021.String", "dom", "dom.iterable", "esnext"],
    "checkJs": true, // checks types in .js files (https://github.com/microsoft/TypeScript/wiki/Type-Checking-JavaScript-Files)
    "skipLibCheck": true, // https://stackoverflow.com/questions/33001237/webpack-not-excluding-node-modules
  },
  // "include": ["cli", "foxx", "lib", "scripts", "services", "test", "ui"],
  "exclude": [
    "node_modules",
    "arangodb3-client"
  ]
}
