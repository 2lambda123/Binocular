{
  "name": "pupil",
  "version": "0.0.1",
  "description": "Visualize project parameters from different sources.",
  "main": "pupil.js",
  "scripts": {
    "test": "mocha --reporter spec test",
    "coverage": "istanbul cover ./node_modules/.bin/_mocha -- --reporter spec",
    "jshint": "jshint . --exclude node_modules",
    "jscs": "jscs .",
    "check": "npm run jshint && npm run jscs",
    "dev": "nodemon --config .nodemonrc ./pupil.js --no-ui & webpack-dev-server -d --content-base ui/ --inline --hot",
    "build": "webpack",
    "postinstall": "npm run build"
  },
  "keywords": [
    "git"
  ],
  "author": "Roman Decker <roman.decker@gmail.com>",
  "license": "ISC",
  "bin": "./pupil.js",
  "dependencies": {
    "bluebird": "^3.4.6",
    "event-to-promise": "^0.7.0",
    "express": "^4.14.0",
    "lodash": "^4.17.2",
    "neo4j": "^2.0.0-RC2",
    "nodegit": "^0.16.0",
    "opn": "^4.0.2",
    "rc": "^1.1.6",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "webpack": "^1.13.3",
    "yargs": "^6.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.1.2",
    "nodemon": "^1.11.0",
    "webpack-dev-server": "^1.16.2"
  }
}
